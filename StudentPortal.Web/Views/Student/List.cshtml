@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <td>
              Name
            </td>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Subscribed?
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    @student.Id
                </td>
                <td>
                    @student.Name
                </td>
                <td>
                    @student.Email
                </td>
                <td>
                    @student.Phone
                </td>
                <td>
                    @(student.Subscribe ? "Yes" : "No")

                </td>
                <td>
                    <a class="btn btn-success" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                    
                </td>
            </tr>
        }
    </tbody>

</table>